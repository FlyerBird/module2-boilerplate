<div class="arrowBack">
  <a href="/"><i class="fa-solid fa-circle-arrow-left"></i></a>
</div>

<div class="welcomeUser">
  <div class="welcomeUserPH2">
    <h5>Hello iTalker</h5>
    <h4>{{user.username}}</h4>
  </div>



  <div class="wUserImgUl">
    <img src="{{ user.imageProfile }}" width="60px" height="60px" alt="imageProfile">

    <h5>Spoken Languages🌍</h5>

    <ul>
      {{#each user.languageSkills}}
      <li>{{this}}</li>
      {{/each}}
    </ul>

  </div>



  <div class="profileButtons">
    <a class="editProfileButton" href="/auth/profile/edit">Edit your profile</a>

    <form class="logoutButton" action="/auth/logout" method="POST">
      <button type="submit">Logout <i class="fa-solid fa-right-from-bracket"></i></button>
    </form>

    <form class="deleteAccountButton" action="/auth/delete/confirmation" method="GET">
      <button type="submit">Delete your account <i class="fa-solid fa-trash"></i></button>
    </form>

  </div>

</div>
<div class="arrowBack">
  <a href="/">
    <img src="/images/arrow-back.png" alt="arrowBack" width="20px">
  </a>
</div>

<div class="formSignup">
  <form action="/auth/signup" method="POST">
  <h2>Â¡Create a new account!</h2>
  
 <div>
      <label>Username</label>
      <br>
      <input type="text" name="username" placeholder="JohnDoe88" />
 </div>
    
 <div>
      <label>Email</label>
      <br>
      <input type="email" name="email" placeholder="john@doe.com" />
 </div>
    
<div>
      <label>Full Name</label>
      <br>
      <input type="text" name="fullname" />
</div>
    
<div>
      <label>Password</label>
      <br>
      <input type="password" name="password" placeholder="********" />
</div>
   
<div>
      <label>Confirm Password</label>
      <br>
      <input type="password" name="confirmPassword" placeholder="********" />
</div>
    
<div>
      <label>Date of birth</label>
      <br>
      <input type="date" name="dateOfBirth"/>
</div>
    
<div>
      <label>Languages</label>
      <br>
      <select name="languageSkills" multiple>
            <option value="Spanish">Spanish</option>
            <option value="English">English</option>
            <option value="Catalan">Catalan</option>
            <option value="French">French</option>
            <option value="Deutsch">Deutsch</option>
      </select>

      {{#if error}}
      <p style="color: red;">{{error}}</p>
      {{/if}}
</div>
   
 
    <button type="submit">Create account</button>
 
  </form>
</div>

<div class="arrowBack">
  <a href="/events/"><i class="fa-solid fa-circle-arrow-left"></i></a>
</div>

<div class="userDetail">

    {{#if organiser.imageProfile}}
        <img src="{{ organiser.imageProfile }}" width="30px" height="30px" alt="imageProfile">
        {{else}}
        <i style="width: 25px" class="fa-solid fa-user"></i>
        {{/if}}

   <h2>{{organiser.username}} </h2>

<div class="userDetail2">
     <br>
<h4> Events created </h4>  
    <ul>
      {{#each events}}
      <li>{{this.location}}</li>
      <li>{{this.description}}</li>
      {{/each}}
    </ul>
</div>

</div>








<div class="arrowBack">
  <a href="/events">
    <img src="/images/arrow-back.png" alt="arrowBack" width="20px">
  </a>
</div>

<h1>Event in {{event.location}}</h1>

<p>
    Date / Time: {{event.datetime}}
</p>

<p>
    Max Assisstants: {{event.maxAssistants}}
</p>

<p>
    Description: {{event.description}}
</p>

<p>
    Language: {{event.language}}
</p>

<p><strong>Organiser:{{event.organiser.fullname}}</strong></p>

<p>Participants:</p>
    {{#each event.participants}}
    <p>{{this.username}}</p>
    {{/each}}

{{#if check}}
    <div>
      <a href="/events/edit/{{event._id}}">Edit 📝</a>
      <form method="POST" action="/events/delete/{{event._id}}">
        <button type="submit">Delete 🗑</button>
      </form>
    </div>
{{/if}}
{{#unless isEnrolled}}
<div>
    <form method="POST" action="/events/{{event._id}}/enroll">
        <button type="submit">Join Event</button>
      </form>

</div>
{{/unless}}

<div class="arrowBack">
  <a href="/events"><i class="fa-solid fa-circle-arrow-left"></i></a>
</div>


<div class="eventsDetail">
  <h1>{{event.location}} Event</h1>

  <p>
    Date / Time: {{event.datetime}}
  </p>

  <p>
    Max Assisstants: {{event.maxAssistants}}
  </p>

  <p>
    Description: {{event.description}}
  </p>

  <p>
    Language: {{event.language}}
  </p>


  <div>
    <a href="/events/userDetail/{{event.organiser._id}}">Organiser:{{event.organiser.fullname}}</a>
    {{#if organiser.imageProfile}}
    <img src="{{ organiser.imageProfile }}" width="30px" height="30px" alt="imageProfile">
    {{else}}
    <i style="width: 25px" class="fa-solid fa-user"></i>
    {{/if}}
  </div>


  <p>Participants:</p>
  {{#each event.participants}}
  <p>{{this.username}}</p>
  {{/each}}

  {{#if check}}
  <div>
    <a href="/events/edit/{{event._id}}">Edit ğŸ“</a>
    <form method="POST" action="/events/delete/{{event._id}}">
      <button type="submit">Delete ğŸ—‘</button>
    </form>
  </div>
  {{/if}}
  {{#unless isEnrolled}}
  <div class="joinEventButton">
    <form method="POST" action="/events/{{event._id}}/enroll">
      <button type="submit">Join Event</button>
    </form>

  </div>
  {{/unless}}

</div>
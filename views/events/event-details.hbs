<div class="arrowBack">
  <a href="/events"><i class="fa-solid fa-circle-arrow-left"></i></a>
</div>


<div class="eventsDetail">

  <div class="eventdetailh1">
    <h1>{{event.location}}</h1>
  </div>


  <div class="eachEventDetail">

    <div class="dateDetail">
      <h2 class="dateTime"> {{event.datetime}}</h2>
    </div>
    {{#if event.link}}
    <div class="languageDetail">
      <p>
        <a href="{{event.link}}"><img src="/images/Google_Meet_icon_(2020).svg.png" alt=""></a>
        <a href="{{event.link}}">Google Meet iTalk Link</a>
    </div>
    {{/if}}
    <div class="languageDetail">
      <p>{{event.language}}</p>
    </div>

    <div class="maxDetail">
      <p>Max Assisstants: {{event.maxAssistants}}</p>
    </div>

    <div class="description">
      <p>Description: {{event.description}}</p>
    </div>

    <div class="participants">
      <p>Participants:</p>
      {{#each event.participants}}
      {{this.username}},
      {{/each}}
    </div>

    <div class="organiser">
      <a href="/events/userDetail/{{event.organiser._id}}">Organised by {{event.organiser.fullname}}</a>
      {{#if organiser.imageProfile}}
      <img src="{{ event.organiser.imageProfile }}" width="30px" height="30px" alt="imageProfile">
      {{else}}

      {{/if}}

    </div>

    {{#if check}}
    <div class="joinDeleteButtons">
      <a class="editButton" href="/events/edit/{{event._id}}">Edit üñçÔ∏è</a>
      <form method="POST" action="/events/delete/{{event._id}}">
        <button class="deleteButton" type="submit">Delete <i class="fa-solid fa-trash"></i></button>
      </form>
    </div>
    {{/if}}
    {{#unless isEnrolled}}
    <div class="joinEventButton">
      <form method="POST" action="/events/{{event._id}}/enroll">
        <button type="submit">Join Event</button>
      </form>

    </div>
    {{/unless}}
    {{#if isEnrolled}}
    <div class="joinEventButton">
      <form method="POST" action="/events/{{event._id}}/unroll">
        <button type="submit">Do not assist</button>
      </form>

    </div>
    {{/if}}
  </div>



</div>
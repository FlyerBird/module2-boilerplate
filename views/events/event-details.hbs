<h1>Event in {{event.location}}</h1>

<p>
    Date / Time: {{event.datetime}}
</p>

<p>
    Max Assisstants: {{event.maxAssistants}}
</p>

<p>
    Description: {{event.description}}
</p>

<p>
    Language: {{event.language}}
</p>

<p><strong>Organiser:{{event.organiser.fullname}}</strong></p>

<p>Participants:</p>
    {{#each event.participants}}
    <p>{{this.username}}</p>
    {{/each}}

{{#if check}}
    <div>
      <a href="/events/edit/{{event._id}}">Edit 📝</a>
      <form method="POST" action="/events/delete/{{event._id}}">
        <button type="submit">Delete 🗑</button>
      </form>
    </div>
{{/if}}

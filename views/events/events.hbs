
<div class="arrowBack">
  <a href="/"><i class="fa-solid fa-circle-arrow-left"></i></a>
</div>

<div class="allEvents">
  <h1>Events</h1>

    {{#each ontimeEvents}}
    <div class="eachEvent">
<p class="pevent">
    <a href="/events/{{this._id}}">{{ this.location }}</a>
</p>

<p>
    Date / Time: {{this.datetime}}
</p>

<p>
    Language: {{this.language}}
</p>

<p>
    Organiser: {{this.organiser.fullname}}
</p>

<p>
    Available Spots: {{this.availableSpots}}
</p>
    </div>
  
{{/each}}
</div>


<div class="allEvents">
    <h1>Expired Events:</h1>
    {{#each expiredEvents}}
    <div class="eachEvent">
<p class="pevent">
    <a href="/events/{{this._id}}">{{ this.location }}</a>
</p>

<p>
    iTalked at {{this.datetime}}
</p>

<p>
    Language: {{this.language}}
</p>

<p>
    Organiser: {{this.organiser.fullname}}
</p>
    </div>
  
{{/each}}
  </div>


 

